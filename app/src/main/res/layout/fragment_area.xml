<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:background="#FFF"
    tools:context="dev.urotea.sudokubreaker.AreaFragment">

    <GridLayout
        android:id="@+id/zoom_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp">

        <Spinner
            android:id="@+id/sp_left_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="0"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_middle_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="0"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_right_up"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_row="0"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_left_middle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="1"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_middle_middle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="1"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_right_middle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_row="1"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_left_bottom"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="2"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_middle_bottom"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="2"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame"/>

        <Spinner
            android:id="@+id/sp_right_bottom"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_row="2"
            android:entries="@array/input_list"
            android:spinnerMode="dialog"
            android:background="@drawable/simple_frame" />

    </GridLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="入力完了"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/zoom_grid" />

</android.support.constraint.ConstraintLayout>