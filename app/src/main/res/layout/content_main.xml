<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dev.urotea.sudokubreaker.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/left_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/middle_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/right_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/left_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/middle_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/right_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/left_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/middle_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

        <GridLayout
            android:id="@+id/right_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:columnCount="3"
            android:rowCount="3" >
        </GridLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
